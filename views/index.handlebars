{{!-- Messenger --}}
<div class="container z-depth-3 #ffcdd2 red lighten-4 messenger-container">
  <div class="row">
    <div class="col s12">
      <div class="container" id="message-log">
        <ul id="messages"></ul>
      </div>
    </div> 
  </div>
  <div class="row">
    <div class="col s12">
      <form id="type">
        <label for="text-area">Messenger</label>
        <textarea class="materialize-textarea" type="text" id="admin-message"></textarea>
        <div class="input-field col s3">
        <button class="btn waves-effect #4a148c bgrnd" id="admin-send" type="">Send Message
        </button>
        </div>
      </form>
    </div>
    </div>
</div>
<br>
<br>
  
  <!-- CREATE LIST -->
  <div class="container z-depth-3 #ffcdd2 red lighten-4">
    <div class="row">
      <div class="col s12">
        <form id="create-list">
          <div class="input-field col s12">
          <textarea class="materialize-textarea #ffffff white" type="text" id="list-item" name="newList" ></textarea>
          </div>
          <div class="input-field col s3">
          <button class="btn waves-effect #4a148c bgrnd" type="submit">Add List
          </button>
          </div>
        </form>
      </div>
    </div>
  </div>

 
  <br>
  <br>
  
  <!-- The Task Card -->
  <div class="container">
    {{#each lists }}
      {{> lists/user-list}}
    {{/each }}
  </div>
   
 </main>

