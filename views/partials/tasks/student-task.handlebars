{{!-- Display every task with their count and a complete button --}}		
<div class="row">
	<div class="col s12">
		<ul class="collection">
			<li id="task-input" class="collection-item">
				{{ description }}
			</li> 
			<button class="complete-task btn waves-effect #4a148c bgrnd change-count" type="submit" data-id="{{ id }}" data-count="{{ count }}">Complete
			</button>
		</ul>  
	</div>
</div>
