{{!-- Display every task with their count and a delete button --}}
<div class="row">
  <div class="col s9">
	<ul class="collection">
	  <li >
	    <div id="task-input" class="collection-item">{{ description }}</div>

		<button class="btn waves-effect #4a148c purple darken-4 remove-task" name="action" text="Delete" data-id="{{ id }}">
		  Delete
		</button>

		<i class="material-icons right"></i>
		  Count: <span id="counter-{{ id }}">{{ count }}</span>
	  </li> 
	</ul>  
  </div>
</div>
		